<script>
    // Simple addition of 1, 4, and 7
    const num1 = 1;
    const num2 = 4;
    const num3 = 7;
    const sum = num1 + num2 + num3;
    console.log("The sum of 1 + 4 + 7 is: " + sum);

    document.getElementById("pollForm").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent the form from submitting

        // Get the selected option
        var selectedOption = document.querySelector('input[name="pollOption"]:checked');

        if (selectedOption) {
            var pollOption = selectedOption.value;
            alert("Thank you for participating in our poll! Your preference: " + pollOption);
